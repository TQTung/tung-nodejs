<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <title>Update User</title>
  </head>
  <body>
    <div class="create-user-container">
      <h2>Update User:</h2>
      <form action="/update-user" method="POST">
        <div>
          <label>First Name:</label>
          <input
            name="firstName"
            type="text"
            value="<%=dataUser.firstName %>"
          />
        </div>
        <div>
          <label>Last Name:</label>
          <input name="lastName" type="text" value="<%=dataUser.lastName %>" />
        </div>
        <div>
          <label>Email:</label>
          <input name="email" type="email" value="<%=dataUser.email %>" />
        </div>
        <div>
          <label>Address:</label>
          <input name="address" type="text" value="<%=dataUser.address %>" />
        </div>
        <input type="text" value="<%=dataUser.id %>" hidden name="id" />
        <div>
          <button type="submit" class="btn-submit">Save</button>
        </div>
      </form>
    </div>
  </body>
</html>
